<% if @item.errors.any? %>

  <% @item.errors.each do |field, message| %>
    <h6><%= field.to_s.capitalize %> <%= message %></h6>
  <% end %>

<% end %>


<%= form_for @item, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :category, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <%= f.number_field :price, class: "form-control" %>
        <span class="input-group-addon">.00</span>
      </div>
    </div>
  </div>
  <%= f.submit "Go!", class: "btn btn-primary" %>
<% end %>
