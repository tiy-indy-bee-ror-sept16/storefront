<%= link_to "New Item", new_item_path, class: "btn btn-primary btn-large" %>

<table class="table table-striped table-condensed">
  <tr>
    <th>
      Title
    </th>
    <th>
      Category
    </th>
    <th>
      Description
    </th>
    <th>
      Price
    </th>
    <th>
      Quantity ordered
    </th>
    <th></th>
  </tr>
<% @items.each do |item| %>
  <tr>
    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.category %>
    </td>
    <td>
      <%= item.description %>
    </td>
    <td>
      <%= number_to_currency(item.price.to_i/100.0) %>
    </td>
    <td>
      <%= item.total_quantity.to_i %>
    </td>
    <td>
      <%= link_to "Edit", edit_item_path(item), class: "btn btn-primary" %>
      <%= button_to "Delete", item, method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
</table>
